  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/londonbrown/abclsp.git"
  },
  "keywords": [
    "abc",
    "music",
    "lsp",
    "vscode",
    "abcnotation",
    "markup"
  ],
  "author": "londonbrown",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/londonbrown/abclsp/issues"
  },
  "homepage": "https://github.com/londonbrown/abclsp#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "3.2.5"
  },
  "lint-staged": {
    "**/*": [
      "eslint",
      "prettier --write --ignore-unknown"
